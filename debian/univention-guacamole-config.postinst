#!/bin/sh

#DEBHELPER#
case "$1" in
configure)
	test -x /etc/init.d/slapd && invoke-rc.d slapd restart
	. /usr/share/univention-lib/base.sh
	stop_udm_cli_server
	;;

abort-upgrade|abort-remove|abort-deconfigure)
	;;

*)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

exit 0
